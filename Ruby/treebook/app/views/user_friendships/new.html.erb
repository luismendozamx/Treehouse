<% if @friend %>
  <h1><%= @friend.full_name %></h1>
  <p>Do you want to add <%= @friend.full_name %>?</p>

  <%= simple_form_for @user_friendship, method: :post do |form| %>
    <div class="form form-actions">
      <%= form.hidden_field :friend_id, value: @friend.user_name %>
      <%= submit_tag "Yes, add friend", class: "btn btn-primary" %>
      <%= link_to "Cancel", profile_path(@friend), class: "btn" %>
    </div>
  <% end %>
<% end %>
